<?xml version="1.0" encoding="utf-8"?>
<!-- 실시간 화면 구성 레이아웃  -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- 상단바 -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/bar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimaryDark">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:text="@string/lbl_real"
            />
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/lbl_device_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="40dp"
            android:textSize="24dp"
            android:text="N번 기기이름 "/>

        <TableLayout
            android:id="@+id/tbl_device"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp"
            android:padding="3dp">
            <!--android:stretchColumns="0,1,2,3">-->

            <TableRow android:background="#eaeaea">

                <TextView
                    android:id="@+id/tr_time"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="#eaeaea"
                    android:gravity="center"
                    android:text="남은시간"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/td_time"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_weight="4"
                    android:layout_margin="1dp"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:text="0초"
                    android:textSize="20sp" />

            </TableRow>

            <TableRow android:background="#eaeaea">
                <TextView
                    android:id="@+id/tr_cash"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="#eaeaea"
                    android:gravity="center"
                    android:text="현금"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/td_text_cash"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_margin="1dp"
                    android:layout_weight="4"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:text="0원"
                    android:textSize="20sp" />
            </TableRow>

            <TableRow android:background="#eaeaea">

                <TextView
                    android:id="@+id/tr_card"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:layout_margin="1dp"
                    android:background="#eaeaea"
                    android:gravity="center"
                    android:text="카드"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/td_text_card"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_margin="1dp"
                    android:layout_weight="4"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:text="0원"
                    android:textSize="20sp" />

            </TableRow>

            <TableRow android:background="#eaeaea">
                <TextView
                    android:id="@+id/tr_sales"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:layout_margin="1dp"
                    android:background="#eaeaea"
                    android:gravity="center"
                    android:text="당일매출"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/td_sales"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_margin="1dp"
                    android:layout_weight="4"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:text="0원"
                    android:textSize="20sp" />

            </TableRow>
        </TableLayout>

    </LinearLayout>

</LinearLayout>