<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/btn_white_exit" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:gravity="right"
            android:text="@string/lbl_real"
            android:textSize="30sp"
            android:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorPrimary">

        <TextView
            android:id="@+id/lbl_device_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="20dp"
            android:textSize="25sp"
            android:textColor="#000000"
            android:text="N번 기기이름 " />

        <TableLayout
            android:id="@+id/tbl_device"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="80dp"
            android:padding="3dp"
            android:stretchColumns="0,1,2,3">

            <TableRow android:background="#000000">

                <TextView
                    android:id="@+id/tr_time"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_margin="1dp"
                    android:background="#eaeaea"
                    android:gravity="center"
                    android:text="남은시간"
                    android:textColor="#000000"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/tr_cash"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_margin="1dp"
                    android:background="#eaeaea"
                    android:gravity="center"
                    android:text="현금"
                    android:textColor="#000000"
                    android:textSize="24sp" />
            </TableRow>

            <TableRow android:background="#000000">

                <TextView
                    android:id="@+id/td_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="1dp"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:text="0초"
                    android:textColor="#000000"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/td_text_cash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="1dp"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:text="0원"
                    android:textColor="#000000"
                    android:textSize="24sp" />
            </TableRow>

            <TableRow android:background="#000000">

                <TextView
                    android:id="@+id/tr_card"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_margin="1dp"
                    android:background="#eaeaea"
                    android:gravity="center"
                    android:text="카드"
                    android:textColor="#000000"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/tr_sales"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_margin="1dp"
                    android:background="#eaeaea"
                    android:gravity="center"
                    android:text="당일매출"
                    android:textColor="#000000"
                    android:textSize="24sp" />
            </TableRow>

            <TableRow android:background="#000000">

                <TextView
                    android:id="@+id/td_text_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:text="0원"
                    android:textColor="#000000"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/td_sales"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:text="0원"
                    android:textColor="#000000"
                    android:textSize="24sp" />

            </TableRow>
        </TableLayout>

    </LinearLayout>

</LinearLayout>